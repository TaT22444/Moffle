---
interface Props {
	title?: string;
	href?: string;
}
const { title, href } = Astro.props

const nav = [
    {
        href: '/',
        label: 'トップ'
    },
    {
        href: '/about',
        label: 'もっふるとは'
    },
    {
        href: '#topping',
        label: 'トッピング'
    },
    {
        href: '#events',
        label: 'イベント情報'
    },
    {
        href: '#news',
        label: 'お知らせ'
    }
];

import '../styles/header/header.css'
